rect_width = get_width() / 3
rect_height = get_height()

# Create a Blue rectangle on left
blue_rect = Rectangle(rect_width, rect_height)
blue_rect.set_position(0, 0)
blue_rect.set_color(Color.blue)
add(blue_rect)

# Create a Red rectangle on right
red_rect = Rectangle(rect_width, rect_height)
red_rect.set_color(Color.red)
red_rect.set_position(rect_width * 2, 0)
add(red_rect)
