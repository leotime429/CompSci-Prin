def change_size(event):
    current_size = circle.get_radius()
    if event.key == "ArrowLeft" and current_size > 10:
        circle.set_radius(current_size - 10)
    if event.key == "ArrowRight"  and current_size < 400:
        circle.set_radius(current_size + 10)
    

circle = Circle(100)
circle.set_position(250, 250)
add(circle)
	
add_key_down_handler(change_size)
