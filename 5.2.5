INCHES_TO_CM = 2.54
CM_TO_METERS = 0.01
FEET_TO_INCHES = 12

# This function converts height in feet/inches
# to meters and prints the result.
def convert_height_to_meters(feet, inches):
    height_in_inches = feet * FEET_TO_INCHES + inches;
    height_in_centimeters = height_in_inches * INCHES_TO_CM;
    height_in_meters = height_in_centimeters * CM_TO_METERS;
    print(str(feet) + " feet, " + str(inches) + " inches = " + str(height_in_meters) + " meters")

convert_height_to_meters(6, 4)
convert_height_to_meters(5, 8)
convert_height_to_meters(5, 2)
